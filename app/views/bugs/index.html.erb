<h1><%= "#{@program.name}'s Bugs" if @program %></h1> <!-- helper to decide title-->
<h1><%= "#{@user.name}'s Bugs" if @user %></h1>

<% if @bugs %>
  <% @bugs.each do |bug| %>
    <%= bug.status %><br>
    <%= bug.priority %><br>
    <%= bug.overview %><br>
    <%= bug.category %><br><br>
  <% end %>
<% end %>

<% if @program %>
  <%= link_to "Create New Bug for #{@program.name}", new_program_bug_path(@program), class: "btn btn-primary" %>
<% end %>