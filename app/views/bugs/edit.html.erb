<h1><%= "Update Bug ##{@bug.id} for #{@bug.program.name}" %></h1>
<%= conten_for :errors do %>
  <%= render partial: 'layouts/errors', locals: {object: @bug} %>
<% end %>

<%= form_with model: ([@bug.program, @bug]) do |f| %>  
  
  <%= render partial: 'status_field', locals: {f: f} %>
  <%= render partial: 'form', locals: {f: f} %>
  <%= render partial: 'client_update_field', locals: {f: f} %>
  
  <%= f.submit "Update Bug" %>
<% end %>