<h1>Login To Report A Bug</h1>
<%= form_with model: @user, url: client_login_path  do |f| %>  <!-- show errors for user instance if present --> 
  <% if @user.errors.any? %>
    <ul>
      <% @user.errors.full_messages.each do |mes| %>
        <li><%= mes %></li>
      <% end %>
    </ul>
  <% end %>  
  <%= f.label :email %> <!-- display user input fields for login -->
  <%= f.text_field :email %>
  <br>
  <%= f.label :password %>
  <%= f.text_field :password %>
  <br>
  <%= f.submit "Login" %>
<% end %>
<p>First time reporting a bug? <a href="<%= client_signup_path %>">Signup Here</a></p>
  