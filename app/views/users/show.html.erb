<div class="container text-center text-white">
  <div class="align-content-center mt-3 text-white">
    <h1><%= "#{@user.name}'s Profile" %></h1>
  </div>

  <!-- Project Manager/Developers selects -->
  <div class="row mt-3">
    <div class="col-12">
      <h4><%="Role: #{@user.role}" %></h4>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-4">
      <h4><%= "Program Count: #{@user.programs.count}" %></h4>
    </div>
    <div class="col-4">
      <h4><%= "Bug Count: #{@user.bugs.count}" %></h4>
    </div>
    <div class="col-4">
      <h4><%= "Task Count: #{@user.tasks.count}" %></h4>
    </div>
  </div>
  <div class="row">
    <div class="container row justify-content-center text-white mt-3">
      <h2>Urgent Tasks:</h2>
      <% @user.tasks.urgent.each do |t| %>
        <div class="card bg-secondary mt-3 col-8">
          <%= render partial: 'user_info', locals: {t: t} %>
        </div>
      <% end %>
    </div>
  </div>
</div>
