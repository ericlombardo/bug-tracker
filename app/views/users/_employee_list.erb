<div class="col-10 p-4 table-wrapper-scroll-y my-custom-scrollbar table-border"> <!-- create partial that renders employee scroll bar-->
  <table class="table table-striped table-bordered table-sm">
    <thead>
      <tr class="text-white ">
        <th>Name</th>
        <th>Email</th>
        <th>Role</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |u| %>
        <tr class="text-white">
          <td><%= u.name%></td>
          <td><%= u.email%></td>
          <td><%= u.role %></td>
          <td><%= link_to "Update", edit_user_path(u), class: "btn btn-sm btn-primary" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>